<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imagesB"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:src="@drawable/poular1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"></ImageView>
    <TextView
        android:id="@+id/tvNameB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Poular"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/imagesB"
        app:layout_constraintStart_toEndOf="@id/imagesB"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"></TextView>
    <TextView
        android:id="@+id/tvPriceB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tvNameB"
        app:layout_constraintStart_toEndOf="@id/imagesB"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"></TextView>
    <ImageButton
        android:id="@+id/imgButMinus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_remove_circle_outline_24"
        app:layout_constraintTop_toTopOf="@id/tvPriceB"
        app:layout_constraintStart_toEndOf="@id/tvPriceB"
        android:layout_marginLeft="50dp"></ImageButton>
    <TextView
        android:id="@+id/tvQuanB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/imgButMinus"
        app:layout_constraintStart_toEndOf="@id/imgButMinus"
        app:layout_constraintBottom_toBottomOf="@id/imgButMinus"
        android:layout_marginLeft="15dp"
        ></TextView>

    <ImageButton
        android:id="@+id/imgButAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add"
        app:layout_constraintTop_toTopOf="@id/tvPriceB"
        app:layout_constraintStart_toEndOf="@id/tvQuanB"
        android:layout_marginLeft="15dp"></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>